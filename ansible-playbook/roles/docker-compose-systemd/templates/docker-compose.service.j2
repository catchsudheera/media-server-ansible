[Unit]
Description=Docker Compose container starter for {{ docker_compose_dir_path }}
After=docker.service network-online.target
Requires=docker.service network-online.target

[Service]
WorkingDirectory={{ docker_compose_dir_path }}
Type=oneshot
RemainAfterExit=yes

ExecStartPre=/usr/local/bin/docker-compose pull --quiet --ignore-pull-failures --include-deps
ExecStart=/usr/local/bin/docker-compose up -d --always-recreate-deps --attach-dependencies

ExecStop=/usr/local/bin/docker-compose down

ExecReload=/usr/local/bin/docker-compose pull --quiet --ignore-pull-failures --include-deps
ExecReload=/usr/local/bin/docker-compose up -d --always-recreate-deps --attach-dependencies

[Install]
WantedBy=multi-user.target